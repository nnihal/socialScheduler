<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196F3"
    tools:context=".ChooseLogin">

    <TextView
        android:id="@+id/appName"
        android:layout_width="222dp"
        android:layout_height="68dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="92dp"
        android:fontFamily="@font/allerta"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="#FFEB3B"
        android:textSize="26sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/instagram_button"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginTop="172dp"
        android:background="#00BCD4"
        android:fontFamily="@font/allerta"
        android:text="@string/instagram"
        android:textColor="#FFEB3B"
        app:layout_constraintStart_toStartOf="@+id/twitter_button"
        app:layout_constraintTop_toBottomOf="@+id/appName" />

    <Button
        android:id="@+id/twitter_button"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="136dp"
        android:background="#00BCD4"
        android:fontFamily="@font/allerta"
        android:text="@string/twitter"
        android:textColor="#FFEB3B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instagram_button" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/allerta"
        android:text="@string/developed_with"
        android:textColor="#FFEB3B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/allerta"
        android:text="@string/login_with"
        android:textAlignment="center"
        android:textColor="#FFEB3B"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/instagram_button"
        app:layout_constraintEnd_toEndOf="@+id/instagram_button" />


</androidx.constraintlayout.widget.ConstraintLayout>